{
  "name": "@shelf/is-valid-email-address",
  "version": "0.1.2",
  "description": "Email validator",
  "license": "MIT",
  "author": {
    "name": "Iryna Holovko",
    "email": "iryna.holovko@shelf.io",
    "url": "https://shelf.io"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "benchmark": "babel benchmark.ts | node",
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "yarn test --coverage",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,json}": [
      "eslint --fix"
    ],
    ".circleci/config.yml": [
      ".husky/validate-circleci-config.sh"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/frontend-library"
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.2",
    "@shelf/babel-config": "1.2.0",
    "@shelf/eslint-config": "2.22.3",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.9",
    "@types/jest": "29.2.3",
    "benny": "3.7.1",
    "eslint": "8.28.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lint-staged": "13.0.3",
    "prettier": "2.8.0",
    "typescript": "4.9.3"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
