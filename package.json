{
  "name": "@shelf/is-valid-email-address",
  "version": "1.0.0",
  "description": "Email validator",
  "license": "MIT",
  "author": {
    "name": "Iryna Holovko",
    "email": "iryna.holovko@shelf.io",
    "url": "https://shelf.io"
  },
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "benchmark": "ts-node-esm benchmark.ts",
    "build": "rm -rf lib/ && tsc",
    "coverage": "yarn test --coverage",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "size": "size-limit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{html,md,yml}": "prettier --write",
    "*.{js,ts,json}": "eslint --fix",
    ".circleci/config.yml": ".husky/validate-circleci-config.sh"
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 100,
        "lines": 95,
        "statements": 95
      }
    },
    "preset": "ts-jest/presets/default-esm"
  },
  "devDependencies": {
    "@shelf/eslint-config": "3.11.2",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.1.0",
    "@size-limit/preset-small-lib": "10.0.1",
    "@types/jest": "29.5.7",
    "benny": "3.7.1",
    "eslint": "8.52.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "size-limit": "10.0.1",
    "ts-jest": "29.1.1",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "350 B"
    }
  ]
}
